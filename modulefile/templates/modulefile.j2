setenv	MOD_VER	{{ pkg[1] }}

# Special module for recording usage metrics.
module	load	pre-module

conflict	{{ pkg[0] }}

{%- if deps is not none %}
{%- for dep in deps %}
prereq		{{ dep }}
{%- endfor %}
{%- endif %}

set		prefix		{{ prefix }}

{%- if paths is not none %}
{%- for env, path in paths.items() %}
prepend-path	{{ '%-10s' | format(env) }}	{{ path }}
{%- endfor %}
{%- endif %}

{%- if envs is not none %}
{%- for env, val in envs.items() %}
setenv		{{ '%-10s' | format(env) }}	{{ val }}
{%- endfor %}
{%- endif %}

module	load	post-module
